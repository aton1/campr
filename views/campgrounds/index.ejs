<%- include("../partials/header") %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>campr.</h1>
      <i class="fa fa-area-chart fa-3x" aria-hidden="true"></i>
      <p class="d-inline">Take a look at our finest selections of campgrounds!</p>
      <p class="mt-4">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add Campground</a>
      </p>
    </div>
  </header>
  <div class="row text-center card-title">
    <% campgrounds.forEach(campground => { %>
      <div class="col-md-3 col-sm-6 mb-5">
        <div class="img-thumbnail px-0 py-0">
          <figure class="figure">
            <img class="img-fluid" src="<%= campground.image %>">
            <figcaption class="figure-caption py-2">
              <h4><%= campground.name %></h4>
              <% if(campground.rating === 0) { %>
                <em>No reviews yet</em>
              <% } else { %>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star <% if(campground.rating > 1.5) { %> checked <% } %>"></span>
                <span class="fa fa-star <% if(campground.rating > 2.5) { %> checked <% } %>"></span>
                <span class="fa fa-star <% if(campground.rating > 3.5) { %> checked <% } %>"></span>
                <span class="fa fa-star <% if(campground.rating > 4.5) { %> checked <% } %>"></span>
              <% } %> 
            </figcaption>
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"><i class="fa fa-info-circle" aria-hidden="true"></i>
              More Info
            </a>
          </figure>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include("../partials/footer") %>
