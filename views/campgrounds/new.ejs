<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="new-form">
      <h1 class="form-title">Create a new campground</h1>
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" placeholder="name" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" placeholder="image url" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[description]" placeholder="description" required>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">< Go Back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
