<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="new-form">
      <h1 class="form-title">Add new comment for 
        <br />
        <em><%= campground.name %></em>
      </h1>
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <textarea class="form-control" rows="7" name="comment[text]" placeholder="add comment" required></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a class="btn btn-default py-0 px-0" href="/campgrounds/<%= campground._id %>"><i class="fa fa-arrow-left"></i> Go Back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
