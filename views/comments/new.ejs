<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="new-form">
      <h1 class="form-title">Add new comment for <%= campground.name %> campground</h1>
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <label>Comment:</label>
          <input class="form-control" type="text" name="comment[text]" placeholder="add comment" required>
        </div>
        <div class="form-group">
          <label>Author:</label>
          <input class="form-control" type="text" name="comment[author]" value="<%= currentUser.username %>" readonly>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">< Go Back</a>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
