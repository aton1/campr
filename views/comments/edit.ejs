<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="new-form">
      <h1 class="form-title">Edit comment</h1>
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" rows="7" name="comment[text]" required><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
        <button class="btn btn-lg btn-danger btn-block">Delete</button>
      </form>
      <p class="py-3">
        <a href="/campgrounds/<%= campground_id %>">< Go Back</a>
      </p>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>
